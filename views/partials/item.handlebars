<div>
  {{#each items}}
    {{! item div }}
    <div class="inner-item-div">
      <h4>{{name}}</h4>
      <img
        id="{{cssItemId}}"
        class="custom-hover"
        src="/images/{{filename}}"
        alt="dataBase Image"
      />
      {{! modal button }}
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addReview"
      >
        Add review
      </button>
    </div>

    {{! Modal }}
    <div
      class="modal fade"
      id="addReview"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Post a review!</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <article class="login-form">
              <form>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Add review
                    below.</label>
                  <input
                    type="email"
                    class="form-control"
                    {{! dynamic input id }}
                    id="{{reviewInputId}}"
                  />
                </div>
              </form>
            </article>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
              {{! id }}
              id="postReview"
            >Submit</button>

          </div>
        </div>
      </div>
    </div>

  {{/each}}
</div>