<div>
  {{#each items}}
    {{! item div }}
    <div class="inner-item-div">
      <h4>{{name}}</h4>
      <img
        id="{{cssItemId}}"
        class="custom-hover"
        src="/images/{{filename}}"
        alt="dataBase Image"
      />
      {{! modal button }}
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addReview"
      >
        Add review
      </button>
    </div>

