<h3>Spice up you browsing with some music</h3>

<iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay"
  src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/174667031&amp;show_artwork=false">
</iframe>

<section class="season-container">
        <h2>Season</h2>

<div class="carousel" data-flickity='{ "autoPlay": true }'>
    {{!-- add for each statement later for adding all products and reviews --}}
    <div class="carousel-cell">
          <h3>Fall Items</h3>
          <div class="product">
                        <div id="itemDiv" class = "item item-full-width">
                            {{> fallItem}}
                        
                        </div>
                        <div id="reviewDiv" class="review" >
                            <p class="reviewClose">Close Reviews</p>

                                <div id="review1" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsPumpkin }}
                                </div>

                                <div id="review2" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsReeses }}
                                </div>

                                <div id="review3" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsSkeleton }}
                                </div>

                                <div id="review4" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsWitchesHat }}
                                </div>

                        </div>                    
          </div>
    </div>

    <div class="carousel-cell">
          <h3>Winter Items</h3>
          <div class="product">
                        <div id="winterItemDiv" class = "item item-full-width">
                            {{> winterItem}}
                        
                        </div>
                        <div id="winterReviewDiv" class="review" >
                            <p class="reviewClose">Close Reviews</p>

                                <div id="review5" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsDreidal }}
                                </div>

                                <div id="review6" class="review-handlebars">
                                {{> reviewTemplate reviews=reviewsChristmasTree }}
                                </div>

                        </div>                    
          </div>
    </div>

    <div class="carousel-cell">
          <h3>Spring Items</h3>
          <div class="product">
                        <div id="springItemDiv" class = "item item-full-width">
                            {{> springItem}}
                        
                        </div>
                        <div id="springReviewDiv" class="review" >
                            <p class="reviewClose">Close Reviews</p>
                                <div id="review7" class="review-handlebars">
                                    {{> reviewTemplate reviews=reviewsDarthVadar }}
                                </div>
                                

                        </div>                    
          </div>
    </div>

    <div class="carousel-cell">
          <h3>Summer Items</h3>
          <div class="product">
                        <div id="summerItemDiv" class = "item item-full-width">
                            {{> summerItem}}
                        
                        </div>
                        <div id="summerReviewDiv" class="review" >
                            <p class="reviewClose">Close Reviews</p>

                                <div id="review8" class="review-handlebars">
                                    {{> reviewTemplate reviews=reviewsJuly4thHat }}
                                </div>
                        </div>                    
          </div>
    </div>

    
    
</div>

